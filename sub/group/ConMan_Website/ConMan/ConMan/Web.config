<configuration>
  <connectionStrings>
    <!--
      The connection string that will be used to connect to our database for ConMan
    -->
    <add name="SqlDatabaseConnString"
         connectionString="Data Source=.\SQLEXPRESS;AttachDbFilename=C:\Users\acer\Documents\GitHub\software-engineering\group\ConMan_Website\ConMan\ConMan\App_Data\nickDB.mdf;Integrated Security=True;User Instance=True"
         providerName="System.Data.SqlClient" />
  </connectionStrings>

  <system.web>
    <compilation debug="true" targetFramework="4.0" />

    <!-- 
      Use Forms Authentication...If not signed-in, redirect to loginUrl and
      once they do sign-in, set cookie timeout to 60 minutes and set
      slidingExpiration to true
      -->
    <authentication mode="Forms">
      <forms loginUrl="~/SignIn.aspx" timeout="60" slidingExpiration="true" />
    </authentication>

    <!-- This forces all users to sign-in-->
    <authorization>
      <deny users="?"/>
    </authorization>

  </system.web>

  <location path="Styles">
    <system.web>
      <authorization>
        <allow users="*" />
      </authorization>
    </system.web>
  </location>

  <system.webServer>
     <modules runAllManagedModulesForAllRequests="true"/>
  </system.webServer>
</configuration>
